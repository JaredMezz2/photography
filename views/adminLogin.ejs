<%- include('partials/head')%>
<div class="container-fluid admin-page d-flex flex-column justify-content-center align-items-center">
    <div class="admin-panel p-3">
        <h1 class="m-0 text-center">Admin Login</h1>
        <form class="form-inline" action="/admin" method="POST" name="submit" class="d-flex flex-column justify-content-between align-items-center needs-validation" novalidate>
            <div class="mb-4">
                <label for="password" class="form-label"></label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
            </div>
            <div class="d-grid gap-2 pt-2 pb-2">
                <button type="submit" class="btn btn-outline-dark btn-lg">Submit</button>
            </div>
        </form>
    </div>
</div>
<script src="../js/bootstrapValidation.js"></script>
</body>
</html>
